.container{
  padding:0;
  position:relative;
  background:#ffffff;
}
page{
  background:#e1e0de;
}

.cover{
  width:100%;
  background-size: cover;
  align-items:center;
  position:relative;
}
.cover .coverpic{
  width:100%;
}
.cover .coveravatar{
  position:absolute;
  /*top:100rpx;*/
  top:35%;
  text-align:center;
  color:#fff;
  line-height:80rpx;
  width:100%;
}
.cover .coveravatar image{
  width:150rpx;
  height:150rpx;
}
.maindata{
  width:100%;
  display:flex;
  flex-direction:row;
  padding:30rpx;
  background:#ffffff;
  position:relative;
  top:-10rpx;
  border-bottom:10rpx solid #ebebeb;

}
.maindata text{
display:block;
text-align:center;
width:50%;
}
.border_right{
border-right:1px solid #ccc;
}
.ham_num{
  width:330rpx;
  display:flex;
  align-items:center;
  flex-direction:row;
  justify-content:center;
  flex-wrap:wrap;
}
.ham_num image{
  width:90rpx;
  height:90rpx;
  margin:10rpx;
}
.ham_num_big{
  width:440rpx;
}
.ham_num_big image{
  width:90rpx;
  height:90rpx;
  margin:10rpx;
}
.half_hum{
  opacity:0.4;
}